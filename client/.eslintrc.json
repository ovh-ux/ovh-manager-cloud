{
    "extends": "../node_modules/eslint-config-ovh/configs/es6-browser.js",
    "rules": {
        "no-magic-numbers": "off",
        "prefer-arrow-callback": "warn",
        "no-mixed-operators": "off",
        "prefer-template": "warn",
        "dot-notation": "warn",
        "no-param-reassign": "off",
        "object-shorthand": "warn",
        "arrow-parens": ["error", "as-needed"],
        "class-methods-use-this": "off",
        "lines-around-comment": "off",
        "strict": "off",
        "indent": ["error", 4, {
            "VariableDeclarator": { "var": 1, "let": 1, "const": 1 },
            "outerIIFEBody": 1,
            "MemberExpression": 1,
            "FunctionDeclaration": {
                "parameters": "first",
                "body": 1
            },
            "FunctionExpression": {
                "parameters": "first",
                "body": 1
            },
            "CallExpression": {
                "arguments": "first"
            },
            "SwitchCase": 1
        }]
    }
}
